<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    x:Class="PowerToys_Settings_Sandbox.Views.MainPage"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:PowerToys_Settings_Sandbox.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

        <StackPanel Margin="0,24,0,0" VerticalAlignment="Top">

            <TextBlock x:Name="GeneralSettingsTitle" HorizontalAlignment="Left" Margin="0,0,0,24" Text="General" TextWrapping="Wrap" VerticalAlignment="Top" Style="{StaticResource TitleTextBlockStyle}"/>

                <muxc:TeachingTip x:Name="FinalGeneralSettingsTip"
                                    Foreground="Black"
                                    Title="If you ever need help with anything you can click the 'i' to find out more about a certion section."
                                    IsLightDismissEnabled="True"
                                    PreferredPlacement="BottomRight"
                                    >
                    <muxc:TeachingTip.IconSource>
                        <muxc:SymbolIconSource Symbol="Help" />
                    </muxc:TeachingTip.IconSource>
                </muxc:TeachingTip>

                <ToggleSwitch x:Name="RunStartupSwitch" Header="Run at startup" VerticalAlignment="Top"></ToggleSwitch>
                <ToggleSwitch Header="Download updates automatically" VerticalAlignment="Top"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="RunAsUserTitle" HorizontalAlignment="Left" Margin="0,24,0,12" Text="Running as user" TextWrapping="Wrap" VerticalAlignment="Top" Style="{StaticResource TitleTextBlockStyle}"/>
                    <FontIcon x:Name="RunAsUserTitleIcon"  FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" Margin="8,18,0,0" VerticalAlignment="Center" Foreground="Blue" PointerPressed="{x:Bind OpenRunAsUserTip}"/>
                    <muxc:TeachingTip x:Name="RunAsUserTip"
                                                Target="{x:Bind RunAsUserTitleIcon}"
                                                Foreground="Black"
                                                Title="Run as user"
                                                PreferredPlacement="Top"
                                                CloseButtonClick="{x:Bind OpenFinalGeneralSettingsTip}"
                                                >
                    <TextBlock Margin="0,-12,0,0" TextWrapping="Wrap">Certain commands in PowerToys require switching to administrator mode. For more information, <Hyperlink NavigateUri="https://github.com/microsoft/PowerToys/blob/master/doc/devdocs/run-as-admin-detection.md">click here</Hyperlink>.</TextBlock>
                </muxc:TeachingTip>
                </StackPanel>
                
                <ToggleSwitch Header="Always run as administrator (Recommended)" VerticalAlignment="Top"/>
            </StackPanel>

        <StackPanel Margin="0,24,0,0" Grid.Column="1" VerticalAlignment="Top">
            <TextBlock x:Name="AboutPowerToysText" Margin="0,48,0,0" Text="About Power Toys" TextWrapping="Wrap" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="VersionText" Margin="0,48,0,0" Text="v0.17.1" TextWrapping="Wrap" />
            <Button Background="Blue" Foreground="White" Content="Check for updates" Margin="0, 12,0,0" Click="{x:Bind DisplayUpdateDialog}"></Button>
            <HyperlinkButton Margin="0, 24, 0,0" Content="Report a bug" />
            <HyperlinkButton Margin="0,0, 0,0" Content="Request a feature" />
        </StackPanel>
    </Grid>
</Page>
