<UserControl x:Class="AnimatedGifRecorder.Views.SampleToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimatedGifRecorder.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Name="CaptureButton" Content="Capture" Click="CaptureButton_Click"/>
            <GridSplitter ResizeDirection="Columns" Grid.Column="2" Height="Auto" Width="5"/>
            <Button Name="RecordPauseButton" Tag="Record" Click="RecordPauseButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Name="RecordPauseImage" Source="/AnimatedGifRecorder;component/Resources/media-record.png" Stretch="None"/>
                    <TextBlock>Record</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="StopButton" Tag="Stop" Click="StopButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Name="StopImage" Source="/AnimatedGifRecorder;component/Resources/media-stop.png" Stretch="None"/>
                    <TextBlock>Stop</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
