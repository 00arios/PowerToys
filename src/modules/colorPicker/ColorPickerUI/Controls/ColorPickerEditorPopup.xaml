<Window x:Class="ColorPicker.Controls.ColorPickerEditorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker"
        xmlns:xamlhost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        mc:Ignorable="d"
        Title="ColorPickerPopupWindow" Topmost="True" ShowInTaskbar="False" Background="Black" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <xamlhost:WindowsXamlHost Margin="10" x:Name="colorPicker" InitialTypeName="Windows.UI.Xaml.Controls.ColorPicker" ChildChanged="colorPicker_ChildChanged" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" x:Name="okButton" Click="okButton_Click" Width="100" Height="30" Margin="5"/>
                <Button Content="Cancel" x:Name="cancelButton" Click="cancelButton_Click" Width="100" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
